{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

	<!-- Header -->
	<header class="masthead">
		<div class="mastheadcover">
			<div class="container">
				<div class="intro-text">
					<div class="intro-lead-in">" Les parents du petit Kévin ont légèrement baissé les bras "
					</div>
					<div class="intro-heading text-uppercase">Pour éviter les désagréments, faites confiance à notre agence !</div>
					<a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="#services">Nous contacter</a>
				</div>
			</div>
		</div>
	</header>

	<!-- Services -->
	<section class="page-section" id="services">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 text-center">
					<h2 class="section-heading text-uppercase">Une agence à votre écoute</h2>
					<h3 class="section-subheading text-muted">Nous faisons de votre projet, notre projet.</h3>
				</div>
			</div>
			<div class="row text-center">
				<div class="col-md-4">
					<span class="fa-stack fa-4x">
						<i class="fas fa-circle fa-stack-2x text-primary"></i>
						<i class="fas fa-hands-helping fa-stack-1x fa-inverse"></i>
					</span>
					<h4 class="service-heading">Accompagnement</h4>
					<p class="text-muted">Nos équipes vous offrent un accompagnement personnalisé</p>
				</div>
				<div class="col-md-4">
					<span class="fa-stack fa-4x">
						<i class="fas fa-circle fa-stack-2x text-primary"></i>
						<i class="fas fa-home fa-stack-1x fa-inverse"></i>
					</span>
					<h4 class="service-heading">Estimation</h4>
					<p class="text-muted">Estimation sur mesure</p>
				</div>
				<div class="col-md-4">
					<span class="fa-stack fa-4x">
						<i class="fas fa-circle fa-stack-2x text-primary"></i>
						<i class="fas fa-star fa-stack-1x fa-inverse"></i>
					</span>
					<h4 class="service-heading">Prestations</h4>
					<p class="text-muted">Gestion, location, vente, on s'occupe de tout</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Slider with new homes -->
	<section class="bg-light page-section" id="portfolio">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 text-center">
					<h2 class="section-heading text-uppercase">Nouveautés</h2>
					<h3 class="section-subheading text-muted">Jetez un coup d'oeil aux derniers arrivants</h3>
				</div>
			</div>

			{% if is_granted('ROLE_USER') %}
				<!-- Pour les membres on affiche les maisons exclusives également -->
				{% set homes = exclusivehomes %}
			{% else %}
				{% set homes = recenthomes %}
			{% endif %}

			<div class="row row-cols-1 row-cols-md-4">
				{% for home in homes %}
				 {% include 'shared/homeItem.html.twig' with {home: home} %}
				{% endfor %}
			</div>
			<div class="row">
				<div class="col-12 text-center mt-5">
					<a href="{{ path('buy') }}" class="border border-dark py-3 px-3 text-dark mx-2">Voir tous les biens <span class="text-info">en vente </span></a>
					<a href="{{ path('renting') }}" class="border border-dark py-3 px-3 text-dark mx-2">Voir tous les biens <span class="text-success">en location </span></a>
				</div>
			</div>
		</div>
	</section>


		<!-- Footer -->
	{% endblock %}

	{% block javascripts %}
		{{ parent() }}
		<script src="{{ asset('js/index.js') }}"></script>

	{% endblock %}
