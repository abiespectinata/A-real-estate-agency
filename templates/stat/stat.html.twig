{% extends 'base.html.twig' %}

{% block title %}Hello StatController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
   <link href='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.css' rel='stylesheet' type='text/css'>
{% endblock %}

{% block body %}

    <div class="container">
        <h1 class= "text-center">STATS</h1>

        <canvas id="myChart" width="400" height="200"></canvas>
    </div>
    

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>

    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: {{ mois.label|json_encode()|raw }},
        datasets: [{
            label: 'Nombre de vues',
            data: {{ mois.nb_vues|json_encode()|raw }},
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });

    </script>


{% endblock %}